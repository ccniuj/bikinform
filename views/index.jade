    function start(label, title, percentage) {
      var div = document.createElement("div");
      div.className = 'col-xs-12 col-sm-4 col-md-4';
      div.style = 'box-sizing:border-box;float:left;padding-left:8%;'
      var rp1 = radialProgress(div)
